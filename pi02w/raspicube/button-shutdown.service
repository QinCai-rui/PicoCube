[Unit]
Description=OLED Shutdown Button Service

[Service]
Type=simple
User=qincai
Group=qincai
WorkingDirectory=/home/qincai/raspicube
ExecStart=/usr/bin/python3 /home/qincai/raspicube/pi02w/raspicube/oled_shutdown.py
Restart=on-failure
StandardOutput=journal
StandardError=journal
KillSignal=SIGTERM
TimeoutStopSec=5

[Install]
WantedBy=default.target